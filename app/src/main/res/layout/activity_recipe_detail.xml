<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- En behållarvy, som LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Din TextView för receptdetaljer -->
        <TextView
            android:id="@+id/recipeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@android:color/black" />

        <!-- Knappen för att gå tillbaka till inställningar -->
        <Button
            android:id="@+id/backToSettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/back_to_settings"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
